<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AlytaloXamarin"
             x:Class="AlytaloXamarin.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
		<Label Text="Älytalo" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
		
		

		<ListView x:Name="SaunanTila"
			HorizontalOptions="Center"
			VerticalOptions="Center" />

		<Label x:Name="SaunanNykyLampotila"
			Text="-"
			HorizontalOptions="Center"
			VerticalOptions="Center" />

		<Button Clicked="Sauna_clicked"
			Text="Tarkista saunan status"
			HorizontalOptions="Center"/>
		
		
		

		<Label x:Name="ValonTila"
			Text="-"
			HorizontalOptions="Center"
			VerticalOptions="Center" />

		<Label x:Name="ValonMaara"
			Text="-"
			HorizontalOptions="Center"
			VerticalOptions="Center" />

		<Button Clicked="Valot_clicked"
				Text="Tarkista valojen status"
				HorizontalOptions="Center"/>

		
		

		<Label x:Name="TalonTavoiteLampotila"
			Text="-"
			HorizontalOptions="Center"
			VerticalOptions="Center" />

		<Label x:Name="TalonNykyLampotila"
			Text="-"
			HorizontalOptions="Center"
			VerticalOptions="Center" />

		<Button Clicked="Termostaatti_clicked"
				Text="Tarkista talon lämpötila"
				HorizontalOptions="Center"/>

	</StackLayout>

</ContentPage>
